{
  "name": "react-strictify",
  "version": "1.0.0",
  "description": "React strict utils",
  "main": "dist",
  "types": "dist",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:cov": "jest --coverage"
  },
  "peerDependencies": {
    "react": "^16.9.0 || ^17.0.0"
  },
  "author": "fe-kr",
  "license": "ISC",
  "devDependencies": {
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.1",
    "@types/react": "^16.9.0 || ^17.0.0",
    "jest": "^29.7.0",
    "react-test-renderer": "^16.14.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.5.4"
  },
  "jest": {
    "rootDir": "./",
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/dist/**",
      "!**/index.(t|j)s"
    ],
    "testEnvironment": "node"
  }
}
